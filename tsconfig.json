{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "node",
    "lib": [
      "ESNext"
    ],
    "allowJs": true,
    "alwaysStrict": true,
    "checkJs": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true
  },
  "include": [
    "test",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
